

<h1> Wszyscy użytkownicy </h1>
<a asp-action="Create">Dodaj użytkownika</a>

<table>
    <tr><th>ID</th><th>Name</th><th>Email</th></tr>

    @foreach (var user in (IEnumerable<AppUser>)ViewData["Users"])
    {
    <tr>
       <td>@user.Id</td>
        <td>@user.UserName</td>
      <td>@user.Email</td>
      <td><a asp-action="UpdateUser" asp-route-id="@user.Id">Aktualizuj</a></td>
      <td>
          <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
              <button type="submit">Usuń</button>
           </form>
       </td>
    </tr>
    }
</table>