@model LoginVM

<h1>Strona rejestracji</h1>

<h2>
    Zarejestruj się lub
    <a asp-action="Login" asp-controller="Account">Zaloguj</a>
</h2>

<form asp-action="Register" asp-controller="Account" method="post" , class="form-horizontal" role="form">
    <input asp-for="UserName" type="text" name="username" value="" />
    <input asp-for="Email" type="text" name="email" value="" />
    <input asp-for="Password" type="text" name="password" value="" />
    <button type="submit">Rejestruj</button>
</form>
